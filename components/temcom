import React, { useEffect, useState } from "react";
import {
  View,
  Text,
  TouchableOpacity,
  FlatList,
  Modal,
  ScrollView,
  ActivityIndicator,
  Image,
  StyleSheet,
  Dimensions,
  TextInput,
  Alert,
} from "react-native";
import Slider from "@react-native-community/slider";
import ViewShot from "react-native-view-shot";
import { LinearGradient } from "expo-linear-gradient";
import { showAdIfAvailable } from "../utils/hooks/AdManager";
import NetInfo from "@react-native-community/netinfo";
import * as FileSystem from "expo-file-system";
import * as Sharing from "expo-sharing";
import * as Clipboard from 'expo-clipboard';
import Toast from "react-native-toast-message";
import { Ionicons } from "@expo/vector-icons";

const { width } = Dimensions.get("window");

const FONTS = [
  "System", // Default OS font
  "serif", // Generic serif
  "monospace", // Generic monospace
  "sans-serif", // Generic sans-serif
  "Georgia", // Built-in on most systems
  "Times New Roman", // Universal
  "Helvetica", // iOS/Android
  "Arial", // Universal
  "Verdana", // Universal
  "Courier New", // Universal monospace
  "Roboto", // Android default
  "San Francisco", // iOS default
];

export default function DownloadModal({
  visible,
  theme,
  COLORS,
  SOLID_COLORS = [],
  BACKGROUND_IMAGES = [],
  textColor,
  bgColor,
  selectedBackground,
  onSelectColor,
  onSelectBackground,
  onDownload,
  onClose,
  quote,
  author,
  fontSize,
  setFontSize,
  fontFamily,
  setFontFamily,
  alignment,
  setAlignment,
  previewRef,
}) {
  const [loading, setLoading] = useState(false);
  const [isConnected, setIsConnected] = useState(true);
  const [downloadSuccess, setDownloadSuccess] = useState(false);
  const [selectedBgType, setSelectedBgType] = useState("color"); // "color" or "image"
  const [customImageUrl, setCustomImageUrl] = useState("");
  const [showUrlInput, setShowUrlInput] = useState(false);
  const [pastedImages, setPastedImages] = useState([]);

  useEffect(() => {
    const unsubscribe = NetInfo.addEventListener((state) => {
      setIsConnected(state.isConnected);
    });
    return () => unsubscribe();
  }, []);

  const handleShare = async () => {
    if (!isConnected) {
      Toast.show({
        type: "error",
        text1: "No Internet",
        text2: "Please check your connection",
      });
      return;
    }

    try {
      setLoading(true);

      // ✅ Check sharing availability
      const isAvailable = await Sharing.isAvailableAsync();
      if (!isAvailable) {
        Toast.show({
          type: "error",
          text1: "Sharing not supported",
          text2: "This device does not support sharing",
        });
        return;
      }

      await showAdIfAvailable(async () => {
        if (!previewRef?.current) {
          console.warn("ViewShot ref not ready");
          return;
        }

        // ✅ Capture image
        const uri = await previewRef.current.capture({
          format: "png",
          quality: 1,
        });

        // ✅ Directly share (NO base64, NO rewrite)
        await Sharing.shareAsync(uri, {
          mimeType: "image/png",
          dialogTitle: "Share Quote",
          UTI: "public.png",
        });

        setDownloadSuccess(true);
        setTimeout(() => {
          setDownloadSuccess(false);
          onClose();
        }, 1500);
      });
    } catch (err) {
      console.error("Share failed:", err);
      Toast.show({
        type: "error",
        text1: "Share Failed",
        text2: "Please try again",
      });
    } finally {
      setLoading(false);
    }
  };

  // Function to check clipboard for image
  const checkClipboardForImage = async () => {
    try {
      const clipboardContent = await Clipboard.getStringAsync();
      
      // Check if clipboard contains image URL
      const imageUrlPattern = /(https?:\/\/.*\.(?:png|jpg|jpeg|gif|webp|bmp))/i;
      const match = clipboardContent.match(imageUrlPattern);
      
      if (match && match[0]) {
        const imageUrl = match[0];
        return imageUrl;
      }
      
      // Check if clipboard contains base64 image
      const base64Pattern = /^data:image\/[a-z]+;base64,/i;
      if (base64Pattern.test(clipboardContent)) {
        return clipboardContent;
      }
      
      return null;
    } catch (error) {
      console.error("Error checking clipboard:", error);
      return null;
    }
  };

  // Function to handle paste from clipboard
  const handlePasteImage = async () => {
    try {
      const clipboardImage = await checkClipboardForImage();
      
      if (clipboardImage) {
        // Add to pasted images list
        const newImage = {
          id: `pasted-${Date.now()}`,
          uri: clipboardImage,
          name: "Pasted Image",
          type: "image"
        };
        
        setPastedImages(prev => [newImage, ...prev.slice(0, 4)]); // Keep last 5 images
        
        // Select the pasted image
        onSelectBackground(newImage);
        setSelectedBgType("image");
        
        Toast.show({
          type: "success",
          text1: "Image Pasted!",
          text2: "Image from clipboard applied as background",
        });
      } else {
        Toast.show({
          type: "info",
          text1: "No Image Found",
          text2: "Copy an image URL or base64 data first",
        });
      }
    } catch (error) {
      console.error("Error pasting image:", error);
      Toast.show({
        type: "error",
        text1: "Paste Failed",
        text2: "Could not paste image from clipboard",
      });
    }
  };

  // Function to handle custom image URL
  const handleCustomImageUrl = () => {
    if (!customImageUrl.trim()) {
      Toast.show({
        type: "error",
        text1: "URL Required",
        text2: "Please enter a valid image URL",
      });
      return;
    }

    // Validate URL
    try {
      new URL(customImageUrl);
    } catch (error) {
      Toast.show({
        type: "error",
        text1: "Invalid URL",
        text2: "Please enter a valid image URL",
      });
      return;
    }

    // Create custom image object
    const customImage = {
      id: `custom-${Date.now()}`,
      uri: customImageUrl,
      name: "Custom Image",
      type: "image"
    };

    // Add to pasted images (if not already there)
    setPastedImages(prev => {
      const exists = prev.some(img => img.uri === customImageUrl);
      if (!exists) {
        return [customImage, ...prev.slice(0, 4)];
      }
      return prev;
    });

    // Select the custom image
    onSelectBackground(customImage);
    setSelectedBgType("image");
    setShowUrlInput(false);
    setCustomImageUrl("");

    Toast.show({
      type: "success",
      text1: "Image Loaded!",
      text2: "Custom image applied as background",
    });
  };

  const renderCardContent = () => (
    <>
      <Text
        style={{
          fontSize: 100,
          position: "absolute",
          top: 20,
          left: 20,
          opacity: 0.05,
          color: textColor || theme.text,
        }}
      >
        "
      </Text>

      <Text
        style={{
          color: textColor || theme.text,
          textAlign: alignment,
          fontWeight: "600",
          fontSize,
          fontFamily,
          lineHeight: fontSize * 1.2,
          letterSpacing: 1.2,
        }}
      >
        {quote}
      </Text>

      <View
        style={{
          marginTop: 20,
          width: "20%",
          height: 2,
          backgroundColor: textColor || theme.textMuted,
          opacity: 0.6,
          alignSelf:
            alignment === "center"
              ? "center"
              : alignment === "right"
              ? "flex-end"
              : "flex-start",
        }}
      />

      <Text
        style={{
          fontSize: fontSize * 0.6,
          color: textColor || theme.textMuted,
          textAlign: alignment,
          marginTop: 10,
          fontStyle: "italic",
          fontFamily: "serif",
        }}
      >
        {author ? `— ${author.trim()}` : ""}
      </Text>
    </>
  );

  const renderBackground = () => {
    if (selectedBackground && selectedBackground.type === "image") {
      return (
        <Image
          source={{ uri: selectedBackground.value || selectedBackground.uri }}
          style={styles.backgroundImage}
          resizeMode="cover"
        />
      );
    } else if (selectedBackground && selectedBackground.type === "gradient") {
      return (
        <LinearGradient
          colors={[theme.primary, theme.active]}
          style={styles.backgroundFill}
        />
      );
    } else {
      const bgColorValue = selectedBackground
        ? selectedBackground.color || selectedBackground.value
        : bgColor;
      return (
        <View
          style={[
            styles.backgroundFill,
            { backgroundColor: bgColorValue || "#000000" },
          ]}
        />
      );
    }
  };

  // Combine pasted images with default background images
  const allBackgroundImages = [...pastedImages, ...BACKGROUND_IMAGES];

  return (
    <Modal visible={visible} transparent animationType="slide">
      <View style={styles.modalContainer}>
        <View
          style={[
            styles.modalContent,
            { backgroundColor: theme.card || "#111" },
          ]}
        >
          <View
            style={[
              styles.modalHeader,
              { backgroundColor: theme.background || "#000" },
            ]}
          >
            <Text style={[styles.modalTitle, { color: theme.text || "#fff" }]}>
              Customize & Preview
            </Text>
            <TouchableOpacity onPress={onClose} style={styles.closeButton}>
              <Ionicons name="close" size={24} color={theme.text || "#fff"} />
            </TouchableOpacity>
          </View>

          <ScrollView contentContainerStyle={styles.scrollContent}>
            {/* Preview */}
            <View style={styles.previewContainer}>
              <ViewShot
                ref={previewRef}
                options={{ format: "png", quality: 1, result: "tmpfile" }}
                style={styles.viewShot}
              >
                <View style={styles.previewContentWrapper}>
                  {renderBackground()}
                  <View style={styles.previewContent}>
                    {renderCardContent()}
                  </View>
                </View>
              </ViewShot>
            </View>

            {/* Background Type Selector */}
            <View style={styles.section}>
              <Text
                style={[styles.sectionTitle, { color: theme.text || "#fff" }]}
              >
                Background Type
              </Text>
              <View style={styles.bgTypeSelector}>
                <TouchableOpacity
                  style={[
                    styles.bgTypeButton,
                    selectedBgType === "color" && styles.bgTypeButtonActive,
                    { backgroundColor: theme.background || "#374151" },
                  ]}
                  onPress={() => setSelectedBgType("color")}
                >
                  <Ionicons
                    name="color-palette"
                    size={20}
                    color={
                      selectedBgType === "color"
                        ? theme.primary || "#3b82f6"
                        : theme.textMuted || "#9ca3af"
                    }
                  />
                  <Text
                    style={[
                      styles.bgTypeText,
                      {
                        color:
                          selectedBgType === "color"
                            ? theme.primary || "#3b82f6"
                            : theme.textMuted || "#9ca3af",
                      },
                    ]}
                  >
                    Colors
                  </Text>
                </TouchableOpacity>
                <TouchableOpacity
                  style={[
                    styles.bgTypeButton,
                    selectedBgType === "image" && styles.bgTypeButtonActive,
                    { backgroundColor: theme.background || "#374151" },
                  ]}
                  onPress={() => setSelectedBgType("image")}
                >
                  <Ionicons
                    name="image"
                    size={20}
                    color={
                      selectedBgType === "image"
                        ? theme.primary || "#3b82f6"
                        : theme.textMuted || "#9ca3af"
                    }
                  />
                  <Text
                    style={[
                      styles.bgTypeText,
                      {
                        color:
                          selectedBgType === "image"
                            ? theme.primary || "#3b82f6"
                            : theme.textMuted || "#9ca3af",
                      },
                    ]}
                  >
                    Images
                  </Text>
                </TouchableOpacity>
              </View>
            </View>

            {/* Background Options */}
            {selectedBgType === "color" ? (
              <View style={styles.section}>
                <Text
                  style={[styles.sectionTitle, { color: theme.text || "#fff" }]}
                >
                  Background Colors
                </Text>
                <FlatList
                  data={SOLID_COLORS}
                  horizontal
                  showsHorizontalScrollIndicator={false}
                  keyExtractor={(item, index) => `color-${index}`}
                  renderItem={({ item }) => {
                    const isSelected =
                      selectedBackground &&
                      (selectedBackground.color === item ||
                        selectedBackground.value === item);
                    return (
                      <TouchableOpacity
                        style={[
                          styles.colorOption,
                          {
                            backgroundColor: item,
                            borderColor: isSelected
                              ? theme.primary || "#3b82f6"
                              : "transparent",
                          },
                        ]}
                        onPress={() =>
                          onSelectBackground({
                            type: "color",
                            color: item,
                            value: item,
                          })
                        }
                      >
                        {isSelected && (
                          <Ionicons
                            name="checkmark"
                            size={16}
                            color={
                              item === "#ffffff" || item === "#fff"
                                ? "#000"
                                : "#fff"
                            }
                          />
                        )}
                      </TouchableOpacity>
                    );
                  }}
                />
              </View>
            ) : (
              <View style={styles.section}>
                <Text
                  style={[styles.sectionTitle, { color: theme.text || "#fff" }]}
                >
                  Background Images
                </Text>
                
                {/* Paste from Clipboard Button */}
                <View style={styles.pasteSection}>
                  <TouchableOpacity
                    style={[
                      styles.pasteButton,
                      { backgroundColor: theme.primary || "#3b82f6" },
                    ]}
                    onPress={handlePasteImage}
                  >
                    <Ionicons name="clipboard" size={18} color="#fff" />
                    <Text style={styles.pasteButtonText}>
                      Paste Image from Clipboard
                    </Text>
                  </TouchableOpacity>
                  
                  <TouchableOpacity
                    style={[
                      styles.urlButton,
                      { backgroundColor: theme.secondary || "#8b5cf6" },
                    ]}
                    onPress={() => setShowUrlInput(!showUrlInput)}
                  >
                    <Ionicons 
                      name={showUrlInput ? "close" : "link"} 
                      size={18} 
                      color="#fff" 
                    />
                    <Text style={styles.pasteButtonText}>
                      {showUrlInput ? "Cancel" : "Add Image URL"}
                    </Text>
                  </TouchableOpacity>
                </View>
                
                {/* URL Input Field */}
                {showUrlInput && (
                  <View style={styles.urlInputContainer}>
                    <TextInput
                      style={[
                        styles.urlInput,
                        {
                          backgroundColor: theme.background || "#374151",
                          color: theme.text || "#fff",
                          borderColor: theme.primary || "#3b82f6",
                        },
                      ]}
                      placeholder="Paste image URL here..."
                      placeholderTextColor={theme.textMuted || "#9ca3af"}
                      value={customImageUrl}
                      onChangeText={setCustomImageUrl}
                      autoCapitalize="none"
                      autoCorrect={false}
                    />
                    <TouchableOpacity
                      style={[
                        styles.urlSubmitButton,
                        { backgroundColor: theme.primary || "#3b82f6" },
                      ]}
                      onPress={handleCustomImageUrl}
                    >
                      <Text style={styles.urlSubmitText}>Load</Text>
                    </TouchableOpacity>
                  </View>
                )}
                
                {/* Instructions */}
                <Text style={[styles.instructionText, { color: theme.textMuted || "#9ca3af" }]}>
                  Copy an image URL from Google Images, then paste it above
                </Text>

                {/* Image Gallery */}
                <FlatList
                  data={allBackgroundImages}
                  horizontal
                  showsHorizontalScrollIndicator={false}
                  keyExtractor={(item) =>
                    item.id || item.uri || `bg-${Math.random()}`
                  }
                  initialNumToRender={8}
                  maxToRenderPerBatch={8}
                  windowSize={5}
                  removeClippedSubviews={true}
                  updateCellsBatchingPeriod={50}
                  ListHeaderComponent={
                    pastedImages.length > 0 ? (
                      <View style={styles.sectionHeader}>
                        <Text style={[styles.sectionSubtitle, { color: theme.text || "#fff" }]}>
                          Your Pasted Images
                        </Text>
                      </View>
                    ) : null
                  }
                  renderItem={({ item }) => {
                    const isSelected =
                      selectedBackground &&
                      (selectedBackground.id === item.id ||
                        selectedBackground.uri === item.uri ||
                        selectedBackground.value === item.uri);
                    return (
                      <TouchableOpacity
                        style={[
                          styles.imageOption,
                          {
                            borderColor: isSelected
                              ? theme.primary || "#3b82f6"
                              : theme.border || "#374151",
                          },
                        ]}
                        onPress={() =>
                          onSelectBackground({
                            ...item,
                            type: "image",
                          })
                        }
                      >
                        {item.uri ? (
                          <Image
                            source={{ uri: item.uri }}
                            style={styles.imageThumbnail}
                            resizeMode="cover"
                          />
                        ) : item.color === "gradient" ? (
                          <LinearGradient
                            colors={[
                              theme.primary || "#3b82f6",
                              theme.active || "#60a5fa",
                            ]}
                            style={styles.imageThumbnail}
                          />
                        ) : (
                          <View
                            style={[
                              styles.imageThumbnail,
                              { backgroundColor: item.color || "#000000" },
                            ]}
                          />
                        )}
                        {isSelected && (
                          <View style={styles.imageSelectedIndicator}>
                            <Ionicons
                              name="checkmark-circle"
                              size={24}
                              color="#3b82f6"
                            />
                          </View>
                        )}
                        <Text
                          style={[
                            styles.imageName,
                            { color: theme.text || "#fff" },
                          ]}
                          numberOfLines={1}
                        >
                          {item.name || "Image"}
                        </Text>
                      </TouchableOpacity>
                    );
                  }}
                />
              </View>
            )}

            {/* Text Color */}
            <View style={styles.section}>
              <Text
                style={[styles.sectionTitle, { color: theme.text || "#fff" }]}
              >
                Text Color
              </Text>
              <FlatList
                data={COLORS}
                horizontal
                showsHorizontalScrollIndicator={false}
                keyExtractor={(item, index) => `text-${index}`}
                renderItem={({ item }) => (
                  <TouchableOpacity
                    style={[
                      styles.colorOption,
                      {
                        backgroundColor: item,
                        borderColor:
                          item === textColor
                            ? theme.primary || "#3b82f6"
                            : "transparent",
                      },
                    ]}
                    onPress={() => onSelectColor("text", item)}
                  >
                    {item === textColor && (
                      <Ionicons
                        name="checkmark"
                        size={16}
                        color={
                          item === "#ffffff" || item === "#fff"
                            ? "#000"
                            : "#fff"
                        }
                      />
                    )}
                  </TouchableOpacity>
                )}
              />
            </View>

            {/* Font Style */}
            <View style={styles.section}>
              <Text
                style={[styles.sectionTitle, { color: theme.text || "#fff" }]}
              >
                Font Style
              </Text>
              <FlatList
                data={FONTS}
                horizontal
                showsHorizontalScrollIndicator={false}
                keyExtractor={(item) => item}
                renderItem={({ item }) => (
                  <TouchableOpacity
                    style={[
                      styles.fontOption,
                      {
                        backgroundColor:
                          item === fontFamily
                            ? theme.primary || "#3b82f6"
                            : theme.background || "#374151",
                        borderColor: theme.border || "#4b5563",
                      },
                    ]}
                    onPress={() => setFontFamily(item)}
                  >
                    <Text
                      style={[
                        styles.fontText,
                        {
                          color:
                            item === fontFamily ? "#fff" : theme.text || "#fff",
                          fontFamily: item,
                        },
                      ]}
                    >
                      {item}
                    </Text>
                  </TouchableOpacity>
                )}
              />
            </View>

            {/* Font Size Slider */}
            <View style={styles.section}>
              <View style={styles.sliderHeader}>
                <Text
                  style={[styles.sectionTitle, { color: theme.text || "#fff" }]}
                >
                  Font Size
                </Text>
                <Text
                  style={[
                    styles.fontSizeValue,
                    { color: theme.primary || "#3b82f6" },
                  ]}
                >
                  {fontSize.toFixed(0)}px
                </Text>
              </View>
              <Slider
                style={styles.slider}
                minimumValue={14}
                maximumValue={40}
                step={1}
                value={fontSize}
                onValueChange={setFontSize}
                minimumTrackTintColor={theme.primary || "#3b82f6"}
                maximumTrackTintColor={theme.border || "#4b5563"}
                thumbTintColor={theme.primary || "#3b82f6"}
              />
            </View>

            {/* Alignment */}
            <View style={styles.section}>
              <Text
                style={[styles.sectionTitle, { color: theme.text || "#fff" }]}
              >
                Alignment
              </Text>
              <View style={styles.alignmentContainer}>
                {["left", "center", "right"].map((align) => (
                  <TouchableOpacity
                    key={align}
                    style={[
                      styles.alignmentButton,
                      {
                        backgroundColor:
                          alignment === align
                            ? theme.primary || "#3b82f6"
                            : theme.background || "#374151",
                        borderColor: theme.border || "#4b5563",
                      },
                    ]}
                    onPress={() => setAlignment(align)}
                  >
                    
                    <Text
                      style={[
                        styles.alignmentText,
                        {
                          color:
                            alignment === align ? "#fff" : theme.text || "#fff",
                        },
                      ]}
                    >
                      {align.charAt(0).toUpperCase() + align.slice(1)}
                    </Text>
                  </TouchableOpacity>
                ))}
              </View>
            </View>

            {/* Share Info Message */}
            <Text
              style={[styles.shareInfo, { color: theme.warning || "#fbbf24" }]}
            >
              Sharing process contains ads
            </Text>

            {/* Share Button */}
            <View style={styles.buttonContainer}>
              {!isConnected && (
                <Text
                  style={[
                    styles.errorText,
                    { color: theme.error || "#ef4444" },
                  ]}
                >
                  No Internet Connection. Sharing is disabled.
                </Text>
              )}

              <TouchableOpacity
                style={[
                  styles.shareButton,
                  {
                    backgroundColor: isConnected
                      ? theme.primary || "#3b82f6"
                      : theme.textMuted || "#6b7280",
                  },
                ]}
                onPress={handleShare}
                disabled={loading || !isConnected}
              >
                {loading ? (
                  <ActivityIndicator size="small" color="#fff" />
                ) : (
                  <View style={styles.shareButtonContent}>
                    <Ionicons
                      name={
                        downloadSuccess ? "checkmark-circle" : "share-social"
                      }
                      size={22}
                      color="#fff"
                    />
                    <Text style={styles.shareButtonText}>
                      {downloadSuccess ? "✅ Shared Successfully" : "Share Now"}
                    </Text>
                  </View>
                )}
              </TouchableOpacity>

              <TouchableOpacity
                style={[
                  styles.cancelButton,
                  { backgroundColor: theme.error || "#ef4444" },
                ]}
                onPress={onClose}
              >
                <Text style={[styles.cancelButtonText, { color: "#fff" }]}>
                  Cancel
                </Text>
              </TouchableOpacity>
            </View>
          </ScrollView>
        </View>
      </View>
    </Modal>
  );
}

const styles = StyleSheet.create({
  modalContainer: {
    flex: 1,
    backgroundColor: "rgba(0,0,0,0.7)",
    justifyContent: "center",
  },
  modalContent: {
    flex: 1,
    margin: 20,
    borderRadius: 20,
    overflow: "hidden",
  },
  modalHeader: {
    flexDirection: "row",
    justifyContent: "space-between",
    alignItems: "center",
    paddingHorizontal: 20,
    paddingVertical: 15,
  },
  modalTitle: {
    fontSize: 18,
    fontWeight: "600",
  },
  closeButton: {
    padding: 5,
  },
  scrollContent: {
    padding: 15,
  },
  previewContainer: {
    width: "100%",
    aspectRatio: 1,
    marginBottom: 20,
    borderRadius: 15,
    overflow: "hidden",
    alignSelf: "center",
  },
  viewShot: {
    flex: 1,
  },
  previewContentWrapper: {
    flex: 1,
  },
  backgroundImage: {
    ...StyleSheet.absoluteFillObject,
    width: "100%",
    height: "100%",
  },
  backgroundFill: {
    ...StyleSheet.absoluteFillObject,
  },
  previewContent: {
    flex: 1,
    justifyContent: "center",
    alignItems: "center",
    padding: 30,
  },
  section: {
    marginBottom: 15,
  },
  sectionTitle: {
    fontSize: 16,
    fontWeight: "600",
    marginBottom: 8,
  },
  sectionSubtitle: {
    fontSize: 14,
    fontWeight: "500",
    marginBottom: 8,
    marginLeft: 5,
